            height: 45px;
            text-indent: -999px;
            overflow: hidden;
            background: none;
            margin: auto;
            position: absolute;
        }

        .DateText {
            margin: auto;
            font-size: 14pt;
        }

        .DateInput {
            width: 85px;
            padding-left: 0 !important;
            text-align: center;
        }

        .DateIcon {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .ui-widget-content {
            background: #FFFFFF;
            border: none;
            box-shadow: 1px 1px 3px 1px #0000001c;
        }

        .ui-widget-header {
            border: none;
            background: #FCD4D5;
        }

            .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
                background: #FFF3F3;
                border: none;
                border-radius: 3px;
                text-align: center;

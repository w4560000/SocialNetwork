        .ui-state-default:hover {
            background: #f2a1a1;
            color: #FFFFFF;
        }

        .ui-datepicker select.ui-datepicker-month, .ui-datepicker select.ui-datepicker-year {
            width: 35%;
            border-radius: 5px;
            margin: 0px 5px;
            border: none;
        }

        .ui-datepicker-year::-webkit-scrollbar-thumb {
